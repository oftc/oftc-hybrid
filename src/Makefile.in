  hook.c                        \
  hostmask.c                    \
  irc_string.c                  \
  ircd.c                        \
  ircd_signal.c                 \
  kdparse.c			\
  linebuf.c                     \
  list.c                        \
  listener.c                    \
  m_error.c                     \
  match.c                       \
  md5.c                         \
  memory.c                      \
  modules.c                     \
  motd.c                        \
  numeric.c                     \
  packet.c                      \
  parse.c                       \
  rsa.c                         \
  restart.c                     \
  resv.c			\
